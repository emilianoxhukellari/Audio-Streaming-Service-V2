<Window x:Class="Client_Application.AddPlaylistWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client_Application"
        mc:Ignorable="d"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        Name ="addNewPlaylist" Title="Create New Playlist" Height="150" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Background="#FF323232">
        <TextBox x:Name="newPlaylistTextbox" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="220" Margin="0,20,0,0"/>
        <Button x:Name="createNewPlaylistButton" Content="Create" VerticalAlignment="Bottom" Width="78" Height="32" Click="createNewPlaylistButton_Click" Background="#FF00AA7F" BorderBrush="{x:Null}" Margin="60,0,0,20"/>
        <Button x:Name="cancelCreateNewPlaylistButton" Content="Cancel" VerticalAlignment="Bottom" Width="78" Height="32" Click="cancelCreateNewPlaylistButton_Click" Background="#FF00AA7F" BorderBrush="{x:Null}" HorizontalAlignment="Right" Margin="0,0,60,20"/>
    </Grid>
</Window>
