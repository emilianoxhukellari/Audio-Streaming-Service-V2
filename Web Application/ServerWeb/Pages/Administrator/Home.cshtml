@page
@model ServerWeb.Pages.Administrator.HomeModel
@{
    ViewData["Title"] = "Home";
}
<div class="col-sm-2 mx-auto mt-3" style="height: 15vh; width: 50%">
    <div style="display: flex; justify-content: center;">
        <span class="oi oi-person" style="font-size: 5em;"></span>
    </div>
    <h4 class="text-center mt-3">@Model.UserEmail</h4>
    <div class="text-center">
    </div>
</div>

<div class="container" style="margin-top:100px">
    <div class="row align-items-center h-100 mt-5">
        <div class="col-sm-4 mx-auto" style="height: 40vh;">
            <div style="display: flex; justify-content: center;">
                <span class="oi oi-musical-note" style="font-size: 7em;"></span>
            </div>
            <h3 class="text-center mt-3">Songs</h3>
            <p class="text-center">View and manage the collection of songs.</p>
            <div class="text-center">
                <h1>@Model.NumberOfSongs</h1>
                <a asp-page="/Administrator/Songs" class="btn btn-primary" title="Manage Songs">Manage</a>
            </div>
        </div>
        <div class="col-sm-4 mx-auto" style="height: 40vh;">
            <div style="display: flex; justify-content: center;">
                <span class="oi oi-bug" style="font-size: 7em;"></span>
            </div>
            <h3 class="text-center mt-3">Issues</h3>
            <p class="text-center">Track and resolve issues reported by users.</p>
            <div class="text-center">
                <h1>@Model.NumberOfUnsolvedIssues</h1>
                <a asp-page="/Administrator/Issues" class="btn btn-primary" title="Manage Issues">Manage</a>
            </div>
        </div>
        <div class="col-sm-4 mx-auto" style="height: 40vh;">
            <div style="display: flex; justify-content: center;">
                <span class="oi oi-check" style="font-size: 7em;"></span>
            </div>
            <h3 class="text-center mt-3">Solved Issues</h3>
            <p class="text-center">View a list of issues that have been resolved.</p>
            <div class="text-center">
                <h1>@Model.NumberOfSolvedIssues</h1>
                <a asp-page="/Administrator/SolvedIssues" class="btn btn-primary" title="View Solved Issues">Manage</a>
            </div>
        </div>
    </div>
</div>
